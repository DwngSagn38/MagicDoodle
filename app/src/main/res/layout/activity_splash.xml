<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageLearnPiano"
        android:layout_width="134dp"
        android:layout_height="134dp"
        android:scaleType="centerCrop"
        android:src="@drawable/bg_rating"
        app:layout_constraintBottom_toTopOf="@+id/gifSplash"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="70dp"
        android:layout_marginTop="@dimen/_21sdp"
        android:text="Live Score Soccer"
        android:gravity="center_horizontal"
        android:textColor="@color/white"
        android:textSize="@dimen/_22ssp"
        app:layout_constraintEnd_toEndOf="@id/imageLearnPiano"
        app:layout_constraintStart_toStartOf="@id/imageLearnPiano"
        app:layout_constraintTop_toBottomOf="@id/imageLearnPiano" />


    <ProgressBar
        android:id="@+id/gifSplash"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="16dp"
        android:layout_marginHorizontal="@dimen/_60sdp"
        android:layout_marginBottom="13dp"
        android:indeterminate="true"
        android:indeterminateDrawable="@drawable/ic_progressbar"
        android:max="100"
        android:padding="@dimen/_3sdp"
        android:progress="75"
        app:layout_constraintBottom_toTopOf="@+id/tvAds"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tvAds"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_60sdp"
        android:text="this_action_can_contain_ads"
        android:textColor="@color/black"
        android:textSize="@dimen/_11ssp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/gifSplash"
        app:layout_constraintStart_toStartOf="@id/gifSplash" />


</androidx.constraintlayout.widget.ConstraintLayout>
