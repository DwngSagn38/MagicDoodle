<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_coloring"
    tools:context=".ui.coloring.ColoringDetailActivity">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imgBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_back_1"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/coloring"
        android:textColor="@color/main"
        android:fontFamily="@font/poppins_bold_700"
        android:includeFontPadding="false"
        android:textSize="@dimen/_20ssp"
        app:layout_constraintBottom_toBottomOf="@id/imgBack"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/imgBack" />

    <LinearLayout
        android:id="@+id/llImage"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_marginVertical="30dp"
        android:paddingVertical="20dp"
        android:paddingHorizontal="14dp"
        android:layout_marginHorizontal="10dp"
        android:gravity="center"
        android:background="@drawable/bg_item_coloring"
        app:layout_constraintTop_toBottomOf="@+id/imgBack"
        app:layout_constraintBottom_toTopOf="@+id/tvDrawNow">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imgColoring"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingVertical="20dp"
            android:paddingHorizontal="14dp"
            android:layout_marginVertical="20dp"
            android:layout_marginHorizontal="10dp"
            android:src="@drawable/img_coloring_6"
            android:scaleType="fitXY"/>
    </LinearLayout>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imgShare"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_share_1"
        app:layout_constraintTop_toTopOf="@+id/tvDrawNow"
        app:layout_constraintBottom_toBottomOf="@+id/tvDrawNow"
        app:layout_constraintEnd_toStartOf="@+id/tvDrawNow"
        app:layout_constraintStart_toStartOf="parent"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imgSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_down"
        app:layout_constraintTop_toTopOf="@+id/tvDrawNow"
        app:layout_constraintBottom_toBottomOf="@+id/tvDrawNow"
        app:layout_constraintStart_toEndOf="@+id/tvDrawNow"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tvDrawNow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/draw_this_now"
        android:textColor="@color/main"
        android:textSize="18sp"
        android:fontFamily="@font/poppins_bold_700"
        android:includeFontPadding="false"
        android:background="@drawable/bg_item_language_select"
        android:paddingHorizontal="28dp"
        android:paddingVertical="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>