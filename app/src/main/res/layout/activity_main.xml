<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_home"
    tools:context=".ui.main.MainActivity">

    <TextView
        android:id="@+id/tvApp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/magic_doodle"
        android:fontFamily="@font/kaushanscript_regular_400"
        android:textColor="@color/main"
        android:textSize="28sp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/btnSetting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_setting"
        app:layout_constraintTop_toTopOf="@+id/tvApp"
        app:layout_constraintBottom_toBottomOf="@+id/tvApp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="20dp"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvFreeCreation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_option_main"
        app:layout_constraintTop_toBottomOf="@+id/tvApp"
        android:layout_marginTop="30dp"
        android:includeFontPadding="false"
        android:layout_marginHorizontal="30dp"
        android:text="@string/free_creation"
        android:textSize="21sp"
        android:textColor="@color/main"
        android:fontFamily="@font/poppins_bold_700"
        android:gravity="center_vertical"
        android:drawableStart="@drawable/ic_free_creation"
        android:drawablePadding="20dp"
        android:paddingStart="20dp"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvInspiration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_option_main"
        app:layout_constraintTop_toBottomOf="@+id/tvFreeCreation"
        android:layout_marginTop="10dp"
        android:includeFontPadding="false"
        android:layout_marginHorizontal="30dp"
        android:text="@string/inspiration"
        android:textSize="21sp"
        android:textColor="@color/main"
        android:fontFamily="@font/poppins_bold_700"
        android:gravity="center_vertical"
        android:drawableStart="@drawable/ic_inspiration"
        android:drawablePadding="20dp"
        android:paddingStart="20dp"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvColoring"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_option_main"
        app:layout_constraintTop_toBottomOf="@+id/tvInspiration"
        android:layout_marginTop="10dp"
        android:includeFontPadding="false"
        android:layout_marginHorizontal="30dp"
        android:text="@string/coloring"
        android:textSize="21sp"
        android:textColor="@color/main"
        android:fontFamily="@font/poppins_bold_700"
        android:gravity="center_vertical"
        android:drawableStart="@drawable/ic_coloring"
        android:drawablePadding="20dp"
        android:paddingStart="20dp"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvMyFile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_option_main"
        app:layout_constraintTop_toBottomOf="@+id/tvColoring"
        android:layout_marginTop="10dp"
        android:includeFontPadding="false"
        android:layout_marginHorizontal="30dp"
        android:text="@string/my_file"
        android:textSize="21sp"
        android:textColor="@color/main"
        android:fontFamily="@font/poppins_bold_700"
        android:gravity="center_vertical"
        android:drawableStart="@drawable/ic_my_file"
        android:drawablePadding="20dp"
        android:paddingStart="20dp"
        android:shadowColor="#FFFFFF"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="4"/>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cvMyfile"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="50dp"
        android:background="@drawable/bg_glassy_button"
        android:clipChildren="true"
        android:clipToPadding="true"
        app:strokeWidth="0dp">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvMy"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingStart="20dp"
            android:text="@string/my_file"
            android:textSize="21sp"
            android:textColor="@android:color/white"
            android:fontFamily="@font/poppins_bold_700"
            android:gravity="center_vertical"
            android:drawableStart="@drawable/ic_my_file"
            android:drawablePadding="20dp"
            android:includeFontPadding="false" />
    </com.google.android.material.card.MaterialCardView>


</androidx.constraintlayout.widget.ConstraintLayout>